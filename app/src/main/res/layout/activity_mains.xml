<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="cn.linyi.music.MainsActivity">
    <LinearLayout
        android:id="@+id/main_ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="个性推荐"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/main_btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="歌单"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/main_btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="主播电台"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/main_btn_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="排行榜"
                android:textColor="#ffffff" />
        </LinearLayout>
        <Button
            android:text="进入登录页面"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="login"
            />
        <ImageView
            android:id="@+id/red_line"
            android:src="@drawable/red_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_music_bottom"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="bottom"
        ><!--与父容器底部对齐-->
        <ImageView
            android:id="@+id/songs_pic"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_weight="150"
            android:layout_height="@dimen/activity_songs_pic"
            android:scaleType="fitXY" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="510">
        <TextView
            android:id="@+id/main_music_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_songs_title_height"
            android:textSize="20sp"
            android:text="sfsdfsafs"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/main_music_artist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_songs_title_height"
            android:textSize="14sp"
            android:text="1dfssdfsfa3"
            android:paddingBottom="2dp"
            android:layout_below="@+id/main_music_title"
            />
        </RelativeLayout>
        <ImageView
            android:id="@+id/main_music_list"
            android:src="@drawable/list_icn_mng_dis"
            android:layout_width="0dp"
            android:layout_weight="130"
            android:layout_height="@dimen/activity_songs_btn_height"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/main_music_artist"
            android:layout_toEndOf="@+id/main_music_artist"/>
        <ImageView
            android:id="@+id/main_music_play"
            android:src="@drawable/list_icn_play"
            android:layout_width="0dp"
            android:layout_weight="130"
            android:layout_height="@dimen/activity_songs_btn_height"
            android:scaleType="fitCenter"
           />
        <ImageView
            android:id="@+id/main_music_next"
            android:src="@drawable/playbar_btn_next"
            android:layout_width="0dp"
            android:layout_weight="130"
            android:layout_height="@dimen/activity_songs_btn_height"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
    <SeekBar
        android:layout_alignParentBottom="true"
        android:id="@+id/main_music_progress"
        android:progressDrawable="@drawable/music_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_music_bottom"/>
</RelativeLayout>
