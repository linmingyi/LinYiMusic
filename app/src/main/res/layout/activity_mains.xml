<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main_ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#F00"
            android:orientation="horizontal">
        <ImageView
            android:src="@drawable/actionbar_menu"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:onClick="login"
            android:padding="15dp"
            />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/actionbar_discover_normal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/actionbar_music_normal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:onClick="local"
            />
            <ImageView
               android:src="@drawable/actionbar_friends_selected"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:onClick="showScan"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/actionbar_search"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:padding="15dp"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000"
                android:id="@+id/main_btn_1"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="个性推荐"
                 />

            <TextView
                android:textColor="#000"
                android:id="@+id/main_btn_2"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="歌单" />

            <TextView
                android:textColor="#000"
                android:id="@+id/main_btn_3"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="主播电台"
                />

            <TextView
                android:textColor="#000"
                android:id="@+id/main_btn_4"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="排行榜"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/red_line"
            android:src="@drawable/red_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"/>
    </LinearLayout>
    <include layout="@layout/main_music_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
            />
</RelativeLayout>
